# =============================================================================
# LLM Web Agent Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# All values can also be set via environment variables with the same names

# =============================================================================
# LLM Provider API Keys
# =============================================================================
# OpenAI API Key (required if using OpenAI provider)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (required if using Anthropic provider)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# GitHub Copilot API Gateway URL (if using your custom gateway)
COPILOT_API_URL=http://localhost:5100

# =============================================================================
# LLM Configuration
# =============================================================================
# Provider: openai, anthropic, copilot, custom
LLM_WEB_AGENT__LLM__PROVIDER=openai

# Model name (provider-specific)
# OpenAI: gpt-4o, gpt-4-turbo, gpt-3.5-turbo
# Anthropic: claude-3-opus-20240229, claude-3-sonnet-20240229
LLM_WEB_AGENT__LLM__MODEL=gpt-4o

# Temperature (0.0 - 1.0, lower = more deterministic)
LLM_WEB_AGENT__LLM__TEMPERATURE=0.3

# Max tokens for LLM responses
LLM_WEB_AGENT__LLM__MAX_TOKENS=4096

# =============================================================================
# Browser Configuration
# =============================================================================
# Browser engine: playwright, selenium
LLM_WEB_AGENT__BROWSER__ENGINE=playwright

# Run browser in headless mode (true/false)
LLM_WEB_AGENT__BROWSER__HEADLESS=true

# Default timeout for browser operations (milliseconds)
LLM_WEB_AGENT__BROWSER__TIMEOUT_MS=30000

# Viewport dimensions
LLM_WEB_AGENT__BROWSER__VIEWPORT_WIDTH=1280
LLM_WEB_AGENT__BROWSER__VIEWPORT_HEIGHT=720

# Custom user agent (optional)
# LLM_WEB_AGENT__BROWSER__USER_AGENT=

# =============================================================================
# Agent Configuration
# =============================================================================
# Maximum number of steps per task
LLM_WEB_AGENT__AGENT__MAX_STEPS=20

# Number of retry attempts for failed actions
LLM_WEB_AGENT__AGENT__RETRY_ATTEMPTS=3

# Delay between steps (milliseconds)
LLM_WEB_AGENT__AGENT__STEP_DELAY_MS=500

# Take screenshot on errors (true/false)
LLM_WEB_AGENT__AGENT__SCREENSHOT_ON_ERROR=true

# Enable verbose logging (true/false)
LLM_WEB_AGENT__AGENT__VERBOSE=false

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (optional, logs to console if not set)
# LOG_FILE=/path/to/llm-web-agent.log
